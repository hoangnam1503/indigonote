<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <LinearLayout 
        android:id="@+id/activity_main_undobar"
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:alpha="100"
        android:background="@color/activity_main_undobar"
        android:padding="10dp">
        
        <TextView 
            android:id="@+id/activity_main_undobar_mdg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/activity_main_undobar_text"/>
        
        <Button 
            android:id="@+id/activity_main_undobar_undobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/activity_main_undobar"
            android:textColor="@color/activity_main_undobar_text"
            android:drawableLeft="@drawable/ic_launcher"
            android:text="@string/actiivty_main_undobtn"/>
    </LinearLayout>
</FrameLayout>

